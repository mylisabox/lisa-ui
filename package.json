{
  "name": "lisa-ui",
  "license": "GPL-3.0",
  "angular-cli": {},
  "scripts": {
    "start": "ng serve --host 0.0.0.0",
    "build": "npm run buildEN && npm run buildFR",
    "buildEN": "ng build --base-href=/en/ --output-path=bundle/bundle-en --prod --aot --i18nFile=./src/locale/messages.en.xlf --locale=en --i18nFormat=xlf",
    "buildFR": "ng build --base-href=/fr/ --output-path=bundle/bundle-fr --prod --aot --i18nFile=./src/locale/messages.fr.xlf --locale=fr --i18nFormat=xlf",
    "lint": "tslint \"src/**/*.ts\"",
    "test": "ng test",
    "i18n": "ng xi18n --output-path=src/locale --locale=en && xliffmerge --profile xliffmerge.json en fr",
    "pree2e": "webdriver-manager update",
    "e2e": "protractor"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^4.4.3",
    "@angular/compiler": "^4.4.3",
    "@angular/core": "^4.4.3",
    "@angular/forms": "^4.4.3",
    "@angular/http": "^4.4.3",
    "@angular/platform-browser": "^4.4.3",
    "@angular/platform-browser-dynamic": "^4.4.3",
    "@angular/router": "^4.4.3",
    "angular2-jwt": "^0.2.3",
    "bootstrap-sass": "^3.3.7",
    "core-js": "^2.5.1",
    "express": "^4.15.4",
    "ngx-bootstrap": "^1.9.3",
    "ngx-color-picker": "^4.3.3",
    "ngx-dashboard": "^1.2.0",
    "rxjs": "^5.4.3",
    "zone.js": "0.8.17"
  },
  "devDependencies": {
    "@angular/cli": "1.4.3",
    "@angular/compiler-cli": "^4.4.3",
    "@angular/platform-server": "^4.4.3",
    "@types/jasmine": "^2.6.0",
    "@types/node": "^8.0.29",
    "codelyzer": "~2.1.1",
    "jasmine-core": "2.8.0",
    "jasmine-spec-reporter": "3.2.0",
    "karma": "1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ngx-i18nsupport": "^0.8.5",
    "protractor": "~5.1.2",
    "ts-node": "~3.3.0",
    "tslint": "~5.7.0",
    "typescript": "~2.5.2"
  }
}
